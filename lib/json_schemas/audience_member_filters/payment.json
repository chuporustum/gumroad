{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "properties": {
    "operator": {
      "type": "string",
      "enum": ["is_more_than", "is_less_than", "is_between"]
    },
    "amount_cents": {
      "type": "integer",
      "minimum": 0
    },
    "min_amount_cents": {
      "type": "integer",
      "minimum": 0
    },
    "max_amount_cents": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": ["operator"],
  "additionalProperties": false,
  "if": {
    "properties": {
      "operator": {
        "enum": ["is_more_than", "is_less_than"]
      }
    }
  },
  "then": {
    "required": ["operator", "amount_cents"]
  },
  "else": {
    "if": {
      "properties": {
        "operator": {
          "const": "is_between"
        }
      }
    },
    "then": {
      "required": ["operator", "min_amount_cents", "max_amount_cents"]
    }
  }
}
